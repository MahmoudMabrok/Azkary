<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    tools:context="com.mahmoudmabrok.azakri.feature.home.MainActivity">

    <Button
        android:id="@+id/sabah"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginBottom="@dimen/_50sdp"
        android:background="@drawable/back_button"
        android:drawableEnd="@drawable/ic_isun"
        android:drawablePadding="@dimen/_5sdp"
        android:gravity="center"
        android:minHeight="@dimen/category_height"
        android:padding="16dp"
        android:text="@string/sabah"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Widget.Button" />

    <Button
            android:id="@+id/masa"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_100sdp"
            android:background="@drawable/back_button"
            android:gravity="center"
            android:minHeight="@dimen/category_height"
        android:drawableEnd="@drawable/ic_night"
        android:drawablePadding="@dimen/_5sdp"
            android:padding="16dp"
            android:text="@string/masa"
            android:textAppearance="?android:textAppearanceLarge"
            android:textSize="@dimen/text_size" />

</LinearLayout>
